<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- Download Button -->
  <Style Selector="Button.DownloadButton">
    <Setter Property="Content" Value="Download"/>
    
    <Setter Property="Background" Value="{DynamicResource DownloadButtonBackground}"/>
    <Setter Property="Foreground" Value="{DynamicResource DownloadButtonForeground}"/>

    <Setter Property="FontFamily" Value="Verdana"/>
    <Setter Property="FontSize" Value="12"/>
    <Setter Property="FontWeight" Value="Thin"/>

    <Setter Property="Padding" Value="0"/>
    <Setter Property="Margin" Value="4 0 0 0"/>

    <Setter Property="Cursor" Value="Hand"/>

    <Setter Property="Height" Value="23"/>
    <Setter Property="Width" Value="76"/>

    <Setter Property="VerticalContentAlignment" Value="Center"/>
    <Setter Property="HorizontalContentAlignment" Value="Center"/>
    
    <Setter Property="ToolTip.Tip" Value="Begin download"/>
    
    <Setter Property="DataContext" Value="{Binding DownloadViewModel}"/>
    <Setter Property="Command" Value="{Binding DownloadCommand}"/>
  </Style>

  <!-- Download Button when hovered -->
  <Style Selector="Button.DownloadButton:pointerover /template/ ContentPresenter#PART_ContentPresenter">
    <Setter Property="Background" Value="{DynamicResource DownloadButtonMouseOver}"/>
    <Setter Property="TextBlock.Foreground" Value="{DynamicResource DownloadButtonForeground}"/>
  </Style>
</Styles>
