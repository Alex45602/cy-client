<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- OpenFolder Button -->
  <Style Selector="Button.OpenFolderButton">
    <Setter Property="Height" Value="23"/>
    <Setter Property="Width" Value="30"/>

    <Setter Property="Cursor" Value="Hand"/>

    <Setter Property="Padding" Value="0"/>
    <Setter Property="Margin" Value="0"/>

    <Setter Property="Background" Value="{DynamicResource OpenFolderButtonBackground}"/>

    <Setter Property="ToolTip.Tip" Value="Open destination folder"/>
    
    <Setter Property="DataContext" Value="{Binding OpenFolderViewModel}"/>
    <Setter Property="Command" Value="{Binding OpenFolderCommand}"/>
  </Style>

  <Style Selector="Button.OpenFolderButton:pointerover /template/ ContentPresenter#PART_ContentPresenter">
    <Setter Property="Background" Value="{DynamicResource OpenFolderButtonMouseOver}"/>
  </Style>

  <Style Selector="Button.OpenFolderButton:pressed /template/ ContentPresenter#PART_ContentPresenter">
    <Setter Property="Background" Value="{DynamicResource OpenFolderButtonPressed}"/>
  </Style>

  <!-- OpenFolder Icon -->
  <Style Selector="Image.OpenFolderIcon">
    <Setter Property="Source" Value="avares://CyberdropDownloader.Avalonia/Assets/folder.png"/>
    
    <Setter Property="Stretch" Value="None"/>
    
    <Setter Property="Margin" Value="0"/>
  </Style>
</Styles>
