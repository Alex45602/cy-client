<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
      <!-- Preview of minimize button -->
      <Button Classes="MinimizeButton" Height="23" Width="26"/>
    </Design.PreviewWith>

  <!-- Default Exit button style -->
  <Style Selector="Button.MinimizeButton">
    <Setter Property="FontSize" Value="8.5"/>
    <Setter Property="FontFamily" Value="Microsoft Sans Serif"/>
    <Setter Property="FontWeight" Value="Normal"/>

    <Setter Property="Content" Value="_"/>

    <Setter Property="Background" Value="{DynamicResource MinimizeButtonBackground}"/>
    <Setter Property="Foreground" Value="{DynamicResource MinimizeButtonForeground}"/>

    <Setter Property="HorizontalContentAlignment" Value="Center"/>
    <Setter Property="VerticalContentAlignment" Value="Center"/>
    <Setter Property="HorizontalAlignment" Value="Stretch"/>
    <Setter Property="VerticalAlignment" Value="Stretch"/>
  </Style>

  <!-- Exit button when hovered -->
  <Style Selector="Button.MinimizeButton:pointerover /template/ ContentPresenter#PART_ContentPresenter">
    <Setter Property="Background" Value="{DynamicResource MinimizeButtonMouseOver}"/>
    <Setter Property="TextBlock.Foreground" Value="{DynamicResource MinimizeButtonForeground}"/>
  </Style>
</Styles>
