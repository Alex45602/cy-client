<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- Destination stackpanel -->
  <Style Selector="StackPanel.Destination">
    <Setter Property="Orientation" Value="Horizontal"/>
    <Setter Property="Margin" Value="27 8 27 0"/>
  </Style>

  <Style Selector="Label.DestinationLabel">
    <Setter Property="Content" Value="Destination"/>
    <Setter Property="Foreground" Value="{DynamicResource DestinationLabelForeground}"/>

    <Setter Property="FontFamily" Value="Verdana"/>
    <Setter Property="FontSize" Value="12"/>
    <Setter Property="FontWeight" Value="Thin"/>

    <Setter Property="Height" Value="13"/>
    <Setter Property="Width" Value="71"/>

    <Setter Property="HorizontalContentAlignment" Value="Left"/>
    <Setter Property="VerticalContentAlignment" Value="Bottom"/>

    <Setter Property="Padding" Value="0"/>
    <Setter Property="Margin" Value="3 0 0 0"/>
  </Style>
  
  <Style Selector="TextBox.DestinationTextBox">
    <Setter Property="FontFamily" Value="Microsoft Sans Serif"/>
    <Setter Property="FontSize" Value="13"/>
    <Setter Property="FontWeight" Value="Thin"/>
    
    <Setter Property="Height" Value="16"/>
    <Setter Property="Width" Value="274"/>
    
    <Setter Property="MinHeight" Value="0"/>
    
    <Setter Property="Padding" Value="0"/>
    <Setter Property="Margin" Value="6 0 4 0"/>
  </Style>
</Styles>
