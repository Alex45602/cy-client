<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:CyberdropDownloader.Avalonia"
             x:Class="CyberdropDownloader.Avalonia.App">

  <Application.DataTemplates>
    <local:ViewLocator/>
  </Application.DataTemplates>

  <Application.Styles>
    <!-- Redundant -->
    <FluentTheme Mode="Light"/>

    <!-- Color scheme for whole application -->
    <StyleInclude Source="avares://CyberdropDownloader.Avalonia/Styles/ColorScheme.axaml"/>

    <!-- All custom control styles -->
    <StyleInclude Source="avares://CyberdropDownloader.Avalonia/Styles/Controls.axaml"/>
  </Application.Styles>
</Application>
