<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:vm="using:CyberdropDownloader.Avalonia.ViewModels"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="CyberdropDownloader.Avalonia.Views.MainWindow"
        Title="MainWindow">

  <Window.DataContext>
    <vm:MainWindowViewModel/>
  </Window.DataContext>

  <Grid Background="{DynamicResource MainGridBackground}">
    <Grid.RowDefinitions>
      <RowDefinition Height="23"/>
    </Grid.RowDefinitions>

    <!-- Title bar-->
    <Panel Grid.Row="0"
           Background="{DynamicResource TitleBarBackground}"
           HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

      <StackPanel Orientation="Horizontal"
                  HorizontalAlignment="Left" VerticalAlignment="Stretch">

        <Image Classes="LogoImage"/>
        <Label Classes="TitleLabel"/>
      </StackPanel>

      <StackPanel Orientation="Horizontal"
                  HorizontalAlignment="Right" VerticalAlignment="Stretch">

        <Button Classes="MinimizeButton" Width="26"/>
        <Button Classes="ExitButton" Width="26"/>
      </StackPanel>
    </Panel>
  </Grid>
</Window>
