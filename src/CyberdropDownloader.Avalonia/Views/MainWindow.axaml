<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:vm="using:CyberdropDownloader.Avalonia.ViewModels"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" 
        d:DesignWidth="523" d:DesignHeight="342" Width="523" Height="342"
        x:Class="CyberdropDownloader.Avalonia.Views.MainWindow"
        Title="MainWindow">

  <StackPanel>
    <DockPanel Classes="TitleBar" x:Name="TitleBar" DataContext="{Binding TitleBar}">
      <StackPanel Orientation="Horizontal"
                 HorizontalAlignment="Left" VerticalAlignment="Stretch">

        <Image Classes="LogoImage"/>
        <Label Classes="TitleLabel"/>
      </StackPanel>

      <StackPanel Orientation="Horizontal"
                  HorizontalAlignment="Right" VerticalAlignment="Stretch">

        <Button Classes="MinimizeButton" Command="{Binding MinimizeCommand}"/>
        <Button Classes="ExitButton" Command="{Binding QuitCommand}"/>
      </StackPanel>
    </DockPanel>
  </StackPanel>
</Window>
