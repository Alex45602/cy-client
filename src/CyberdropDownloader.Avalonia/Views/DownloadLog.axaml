<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="CyberdropDownloader.Avalonia.Views.DownloadLog">
  <StackPanel>
    <Label Foreground="{DynamicResource DownloadLogLabelForeground}"
           Content="Download Log"
           FontSize="12" FontFamily="Verdana" FontWeight="Bold"
           Margin="0 0 0 5" Padding="0"/>

    <Border CornerRadius="4"
            Background="{DynamicResource DownloadLogBorderBackground}">

      <TextBlock x:Name="DownloadLogTextBlock"
                 Foreground="{DynamicResource DownloadLogTextBlockForeground}"
                 Background="{DynamicResource DownloadLogTextBlockBackground}"
                 Height="123" Width="465"
                 FontFamily="Microsoft Sans Serif" FontSize="12"
                 Padding="0"/>

    </Border>
  </StackPanel>
</UserControl>
