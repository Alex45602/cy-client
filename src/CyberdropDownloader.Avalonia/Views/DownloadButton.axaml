<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="CyberdropDownloader.Avalonia.Views.DownloadButton">
  
  <UserControl.Styles>
    <Style Selector="Button.DownloadButton:pointerover /template/ ContentPresenter#PART_ContentPresenter">
      <Setter Property="Background" Value="{DynamicResource DownloadButtonMouseOver}"/>
      <Setter Property="TextBlock.Foreground" Value="{DynamicResource DownloadButtonForeground}"/>
    </Style>
  </UserControl.Styles>
  
  <Button Content="Download"
          Classes="DownloadButton"
          Background="{DynamicResource DownloadButtonBackground}"
          Foreground="{DynamicResource DownloadButtonForeground}"
          FontSize="12" FontFamily="Verdana" FontWeight="Thin"
          Padding="0" Margin="4 0 0 0"
          Cursor="Hand"
          Height="23" Width="76"
          HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
          ToolTip.Tip="Begin download"
          Command="{Binding DownloadCommand}"/>
  
</UserControl>
